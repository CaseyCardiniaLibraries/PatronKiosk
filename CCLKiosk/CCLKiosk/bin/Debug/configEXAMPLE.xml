<?xml version="1.0"?>
<ConfigurationData xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <!-- BACKGROUND COLOUR OF ALL WINDOWS -->
  <themeColour>White</themeColour>
  
  <!-- IMAGE RESOURCE FOLDER -->
  <resourceFolder>C:\Users\lucas.baker\source\repos\CCLKiosk\CCLKiosk\bin\Debug\ResourceFiles</resourceFolder>
  
  <!-- BACKGROUND IMAGE ON MAIN SCREEN -->
  <mainBGImage>CCL.png</mainBGImage>
  
  <!-- NUMBER OF BUTTONS/APPS ON MAIN SCREEN -->
  <numOfButtons>3</numOfButtons>
  
  <!-- SIZE OF BUTTONS MENTIONED ABOVE -->
  <buttonWidth>640</buttonWidth>
  <buttonHeight>640</buttonHeight>
  
  <!-- NUMBER OF ROWS ON APP SELECT SCREEN -->
  <mainRows>1</mainRows>
  
  <!-- PADDING BETWEEN ALL APP BUTTONS AND SCREEN -->
  <mainPaddingTop>0</mainPaddingTop>
  <mainPaddingRight>0</mainPaddingRight>
  <mainPaddingBottom>0</mainPaddingBottom>
  <mainPaddingLeft>0</mainPaddingLeft>
  
  <!-- IDLE TIME TO WAIT BEFORE NOTIFYING OF IDLE TIMEOUT -->
  <idleTimeout>10</idleTimeout>
  
  <!-- TIMEOUT COUNTDOWN OF POP-UP NOTIFICATION -->
  <timeoutTime>10</timeoutTime>
  
  <!-- TIMEOUT NOTIFICATION MESSAGE -->
  <timeoutText>Due to inactivity, you will be returned to the Home Screen in:</timeoutText>
  
  <!-- SIZE OF TIMEOUT NOTIFICATION -->
  <timeoutWidth>600</timeoutWidth>
  <timeoutHeight>300</timeoutHeight>
  <timeoutFontSize>14</timeoutFontSize>
  
  <!-- BUTTON CONFIGURATION -->
  <!-- BUTTONS APPEAR IN ORDER LEFT TO RIGHT, TOP TO BOTTOM -->
  <!-- NOTE: BUTTONS WILL EVENLY SPACE OUT ACROSS SCREEN IF THEY DON'T TAKE -->
  <!-- 		 UP THE ENTIRE AREA. PADDING CAN BE USED TO FORCE THEM TOGETHER -->
  <appButtonsConfig>
    <ButtonConfig>
	  <!-- FILE NAME OF BUTTON IMAGE [INCLUDE FILE EXTENSION] -->
      <backgroundImageName>Blue.png</backgroundImageName>
	  <!-- TEXT AND COLOUR NOT NECESSARY -->
      <buttonText>Self Checkout</buttonText>
	  <fontSize>20</fontSize>
      <textColor>White</textColor>
	  <!-- APP TO SWITCH TO; USE PROCESS NAME -->
	  <!-- PROCESS NAME CAN BE ACQUIRED FROM .EXE NAME OR -->
	  <!-- TASK MANAGER, RIGHT CLICK PROCESS, PROPERTIES, NAME [WITHOUT .EXE] -->
	  <appProcName>Teams</appProcName>
    </ButtonConfig>
	
    <ButtonConfig>
      <backgroundImageName>Orange.png</backgroundImageName>
      <buttonText>Catalogue</buttonText>
	  <fontSize>20</fontSize>
      <textColor>White</textColor>
	  <appProcName>Chrome</appProcName>
    </ButtonConfig>
	
	<!-- TO ADD MORE BUTTONS COPY AND PASTE THIS SECTION -->
    <ButtonConfig>
      <backgroundImageName>Green.png</backgroundImageName>
      <buttonText>Book PC</buttonText>
	  <fontSize>20</fontSize>
      <textColor>White</textColor>
	  <appProcName>TeamViewer</appProcName>
    </ButtonConfig>
	<!-- END OF SINGLE BUTTON SECTION, PAST MORE BELOW THIS LINE-->
  </appButtonsConfig>
  
  <!-- HOME BUTTON CONFIG -->
  <homeButtonConfig>
    <!-- FILE NAME OF BUTTON IMAGE [INCLUDE FILE EXTENSION] -->
    <backgroundImageName>Default.png</backgroundImageName>
	
	<!-- TEXT AND COLOUR NOT NECESSARY -->
    <buttonText>HOME</buttonText>
    <textColor>White</textColor>
	<fontSize>14</fontSize>
	
	<!-- SIZE OF HOME BUTTON -->
    <buttonWidth>64</buttonWidth>
	<buttonHeight>64</buttonHeight>
	
	<!-- PADDING BETWEEN SIDE OF SCREEN AND BUTTON -->
    <buttonPaddingVertical>10</buttonPaddingVertical>
	<buttonPaddingHorizontal>10</buttonPaddingHorizontal>
	
	<!-- POSITION OF HOME BUTTON [TOPRIGHT, TOPLEFT, BOTTOMRIGHT, BOTTOMLEFT] -->
    <buttonPosition>TOPRIGHT</buttonPosition>
  </homeButtonConfig>
</ConfigurationData>